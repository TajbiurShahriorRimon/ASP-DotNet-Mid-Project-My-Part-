
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        table, td, tr {
            border: 1px solid black;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        tr {
            height: 90px;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>VendorWithMaxBrand</title>
</head>
<body>
    <table align="center" border="1">
        <tr>
            <td>Vendor Id</td>
            <td>Vendor Name</td>
            <td>Vendor Email</td>
            <td>Total Number Of Brands</td>
            <td></td>
        </tr>
        <tr>
            <td>@Model.vendor_id</td>
            <td>@Model.vendor_name</td>
            <td>@Model.vendor_email</td>
            <td align="center">@ViewData["totalAmount"]</td>
        </tr>
    </table>
</body>
</html>
